<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.triparound.triparound"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MakeTripActivity"
            android:label="@string/title_activity_make_trip" >
        </activity>
        <activity
            android:name=".TripResultsActivity"
            android:label="@string/title_activity_trip_results" >
        </activity>
        <activity
            android:name=".ViewMapActivity"
            android:label="@string/title_activity_map_view" >
        </activity>
        <activity
            android:name=".SaveTripActivity"
            android:label="@string/title_activity_save_trip" >
        </activity>
    </application>

</manifest>