<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.triparound.triparound.MainActivity" >

    <Button
        android:id="@+id/maketripbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/Green"
        android:text="@string/make_trip_button_label" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic"
        android:layout_marginTop="23dp"
        android:textSize="24sp"
        android:text="@string/welcome_text" />

    <Button
        android:id="@+id/savetripbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/maketripbutton"
        android:layout_alignRight="@+id/maketripbutton"
        android:layout_alignLeft="@+id/maketripbutton"
        android:layout_alignStart="@+id/maketripbutton"
        android:layout_below="@+id/maketripbutton"
        android:layout_marginTop="80dp"
        android:background="@android:color/holo_orange_light"
        android:text="@string/save_trip_button_label"
        android:textColor="@color/Blue"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>